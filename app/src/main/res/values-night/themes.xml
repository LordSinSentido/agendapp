<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Agendapp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimario</item>
        <item name="colorPrimaryVariant">@color/colorPrimarioClaro</item>
        <item name="colorOnPrimary">@color/colorPrimarioOscuro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecundario</item>
        <item name="colorSecondaryVariant">@color/colorSecundarioClaro</item>
        <item name="colorOnSecondary">@color/colorSecundarioOscuro</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/colorTextoClaro</item>
    </style>

</resources>